---
export const prerender = true

import Layout from '@/layouts/Layout.astro'
import Decoder from 'src/modules/shared/components/Decoder.svelte'
import CursorTracker from 'src/modules/shared/components/CursorTracker.svelte'
import Phone from 'src/modules/shared/components/Phone.svelte'

const description =
  '🏠 En Santa Coloma existe una inmobiliaria que, con más de 30 años de experiencia, lidera la innovación y el cambio en un sector que pide a gritos una transformación. Entra y déjate sorprender.'
---

<style lang="scss" is:global>
  @use 'src/sass/mixins.scss' as *;
</style>

<Layout title="TRAMITA | Inmobiliaria en Santa Coloma de Gramanet" {description}>
  <Decoder client:load />
  <Phone client:load />
</Layout>

<script>
  import { animReveal } from '@/modules/shared/scripts/reveal'

  window.onload = () => {
    setTimeout(() => animReveal(), 100)
    document.documentElement.scrollTop = 0 // Para navegadores estándar
  }
</script>
